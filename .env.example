# Environment Configuration Example
# Copy this to .env.local and fill in your values

# API Backend URL
VITE_API_URL=http://localhost:3001/api

# Gemini API Key (for development/testing only)
# In production, this should only be in backend/.env
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Environment
VITE_ENVIRONMENT=development

# Analytics (PostHog, Mixpanel, etc.)
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_KEY=

# Error Tracking (Sentry, etc.)
VITE_ENABLE_ERROR_TRACKING=false
VITE_SENTRY_DSN=

# Backend Configuration (for packages/backend)
# These should be in packages/backend/.env

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/nurtureai

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Google Gemini API Key (backend only)
GEMINI_API_KEY=your_gemini_api_key_here

# File Upload
MAX_VIDEO_SIZE_MB=50
UPLOAD_STORAGE_TYPE=local # or 's3', 'gcs', 'r2'

# S3/R2 Configuration (if using cloud storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_BUCKET_NAME=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Server
PORT=3001
NODE_ENV=development
