{
  "name": "@nurtureai/mobile",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "build:dev": "tsc && vite build --mode development",
    "build:staging": "tsc && vite build --mode staging",
    "build:prod": "tsc && vite build --mode production",
    "cap:sync": "cap sync",
    "cap:sync:ios": "cap sync ios",
    "cap:sync:android": "cap sync android",
    "cap:sync:dev": "cp capacitor.config.dev.ts capacitor.config.ts && cap sync",
    "cap:sync:staging": "cp capacitor.config.staging.ts capacitor.config.ts && cap sync",
    "cap:sync:prod": "cp capacitor.config.prod.ts capacitor.config.ts && cap sync",
    "cap:open:ios": "cap open ios",
    "cap:open:android": "cap open android",
    "cap:run:ios": "cap run ios",
    "cap:run:android": "cap run android",
    "ios:dev": "npm run build:dev && npm run cap:sync:dev && cap open ios",
    "ios:staging": "npm run build:staging && npm run cap:sync:staging && cap open ios",
    "ios:prod": "npm run build:prod && npm run cap:sync:prod && cap open ios",
    "android:dev": "npm run build:dev && npm run cap:sync:dev && cap open android",
    "android:staging": "npm run build:staging && npm run cap:sync:staging && cap open android",
    "android:prod": "npm run build:prod && npm run cap:sync:prod && cap open android"
  },
  "dependencies": {
    "@nurtureai/shared": "file:../shared",
    "@capacitor/core": "^6.2.0",
    "@capacitor/ios": "^6.2.0",
    "@capacitor/android": "^6.2.0",
    "@capacitor/camera": "^6.1.0",
    "@capacitor/filesystem": "^6.0.1",
    "@capacitor/network": "^6.0.2",
    "@capacitor/splash-screen": "^6.0.2",
    "@capacitor/status-bar": "^6.0.1",
    "@capacitor/haptics": "^6.0.1",
    "@capacitor/share": "^6.0.2",
    "@capacitor/app": "^6.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.2.0",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^5.0.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}
