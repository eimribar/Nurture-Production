# Server Configuration
PORT=3001
NODE_ENV=development

# Gemini API Key (REQUIRED)
GEMINI_API_KEY=your_gemini_api_key_here

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,capacitor://localhost,ionic://localhost

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# JWT Configuration (for future auth implementation)
JWT_SECRET=your_jwt_secret_here_generate_with_openssl_rand_base64_32
JWT_EXPIRES_IN=7d

# Database (for future implementation)
DATABASE_URL=postgresql://user:password@localhost:5432/nurtureai

# File Upload Configuration
MAX_VIDEO_SIZE_MB=50
